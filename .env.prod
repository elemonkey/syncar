# ===== CONFIGURACIÓN GENERAL =====
APP_NAME=SYNCAR
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# ===== DOMINIO Y SERVIDOR (PRODUCCIÓN) =====
DOMAIN_NAME=localhost
SERVER_IP=127.0.0.1

# ===== BASE DE DATOS (PostgreSQL) =====
# Para producción Docker: postgres (nombre del contenedor)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=syncar_db
POSTGRES_USER=elemonkey
POSTGRES_PASSWORD=Monochico1982***
DATABASE_URL=postgresql+asyncpg://elemonkey:Monochico1982***@postgres:5432/syncar_db

# ===== REDIS =====
# Para producción Docker: redis (nombre del contenedor)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# ===== BACKEND (FastAPI) =====
SECRET_KEY=changeme-super-secret-key-for-jwt-tokens-min-32-chars-local-testing
