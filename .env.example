# ===== CONFIGURACIÓN GENERAL =====
APP_NAME=ImportApp
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# ===== DOMINIO Y SERVIDOR (PRODUCCIÓN) =====
DOMAIN_NAME=syncar.cl
SERVER_IP=45.14.194.85

# ===== BASE DE DATOS (PostgreSQL) =====
# Para desarrollo local: localhost
# Para producción Docker: postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=importapp_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=supersecretpassword
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ===== REDIS =====
# Para desarrollo local: localhost
# Para producción Docker: redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ===== BACKEND (FastAPI) =====
SECRET_KEY=changeme-super-secret-key-for-jwt-tokens-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ===== FRONTEND (Next.js) =====
# Para desarrollo: http://localhost:8000/api/v1
# Para producción: /api/v1 (proxy por Nginx)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_APP_VERSION=${APP_VERSION}

# ===== CELERY =====
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# ===== CREDENCIALES DE IMPORTADORES =====
# Alsacia
ALSACIA_USERNAME=tu_usuario_alsacia
ALSACIA_PASSWORD=tu_password_alsacia
ALSACIA_URL=https://alsacia.example.com

# Refax
REFAX_USERNAME=tu_usuario_refax
REFAX_PASSWORD=tu_password_refax
REFAX_URL=https://refax.example.com

# Noriega
NORIEGA_USERNAME=tu_usuario_noriega
NORIEGA_PASSWORD=tu_password_noriega
NORIEGA_URL=https://noriega.example.com

# Emasa
EMASA_USERNAME=tu_usuario_emasa
EMASA_PASSWORD=tu_password_emasa
EMASA_URL=https://emasa.example.com

# ===== PLAYWRIGHT =====
PLAYWRIGHT_BROWSERS_PATH=/ms-playwright
HEADLESS=true

# ===== LOGGING =====
LOG_LEVEL=INFO

